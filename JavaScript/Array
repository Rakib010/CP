   //Sort an array
    const fruit = ["Banana", "Orange", "Apple", "Mango"];
    console.log(fruit.sort());

    //Reverse an array
    console.log(fruit.reverse());

    //Numeric sort - ascending order
    const point = [40, 100, 1, 5, 25, 10];
    point.sort(function(a,b){
      return a-b;
    });
    console.log(point);

    // array descending:
     point.sort(function(a,b){
      return b-a;
     });
     console.log(point);
   
     //Sorting an Array in Random Order
     point.sort(function(a,b){
      return 0.5 - Math.random();
     });
     console.log(point);

     //Using Math.mix() -max value 
    const x =  Math.max(40,50,30,23,21,400);
    console.log(x);
    // Math.min() - min value
    const y =  Math.min(40,50,30,23,21,400);
    console.log(y);

// min number 
    const digit = [40,50,10,39,20,2,6,12,3,0];
    //let len = digit.length;
    let min = Infinity;
    while(digit.length){
      if(digit[length]<min){
        min = digit[length];
      }
    }
    console.log(min);

   //max number
    let max = -Infinity;
    while(digit.length){
      if(digit[length]>max){
        max = digit[length];
      }
    }
  console.log(max);
  
  // Sorting Object Arrays
  const cars = [
    {type:"Volvo", year:2016},
    {type:"Saab", year:2001},
    {type:"BMW", year:2010}
  ];

  //Even if objects have properties of different data types, the sort() method can be used to sort the array.
  cars.sort(function(a,b){
    return a.year - b.year;
   });
